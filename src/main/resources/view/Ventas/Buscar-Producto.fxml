<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.Ventas.BuscarProductoController"
            style="-fx-background-color: #f0f2f5;">

    <!-- ðŸ”¹ Barra de bÃºsqueda -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">

            <Label text="Buscar:"
                   style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #444;" />

            <TextField fx:id="txtBuscar"
                       promptText="Nombre o cÃ³digo de barras"
                       onKeyReleased="#onBuscar"
                       style="
                          -fx-background-radius: 10;
                          -fx-border-radius: 10;
                          -fx-border-color: #bbbbbb;
                          -fx-padding: 6 10;
                          -fx-font-size: 13;
                       "
                       prefWidth="250"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ Contenedor del scroll -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true"
                    style="
                       -fx-background-color: transparent;
                       -fx-border-color: transparent;
                    ">

            <content>
                <VBox alignment="TOP_CENTER" spacing="10"
                      style="-fx-background-color: transparent;">

                    <FlowPane fx:id="contenedorTarjetas"
                              hgap="20" vgap="20"
                              prefWidth="750"
                              alignment="TOP_CENTER"
                              style="-fx-background-color: transparent;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                    </FlowPane>
                </VBox>
            </content>

        </ScrollPane>
    </center>

</BorderPane>
