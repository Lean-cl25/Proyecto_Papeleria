<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.Productos.ProductoController"
            stylesheets="@/styles.css">

    <!-- ðŸ”¹ BARRA LATERAL IZQUIERDA -->
    <left>
        <fx:include source="/view/Navbar.fxml"/>
    </left>

    <!-- ðŸ”¹ BARRA SUPERIOR -->
    <top>
        <HBox alignment="CENTER_RIGHT"
              style="-fx-background-color: #f2f2f2;
                     -fx-border-color: #cccccc;
                     -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="15" right="25" bottom="15" left="15"/>
            </padding>

            <Region HBox.hgrow="ALWAYS"/> <!-- empuja el botÃ³n a la derecha -->

            <Button fx:id="btnAgregar"
                    text="+ Agregar Producto"
                    style="-fx-background-color: #0078D7;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 8 16 8 16;
                           -fx-background-radius: 8;"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ TABLA PRINCIPAL -->
    <center>
        <VBox spacing="10" alignment="TOP_CENTER">

            <!-- ðŸ”¹ Filtros -->
            <HBox spacing="15"
                  alignment="CENTER_LEFT"
                  styleClass="filtro-panel">

                <!-- Buscar -->
                <TextField fx:id="txtBuscar"
                           promptText="ðŸ” Buscar producto..."
                           prefWidth="220"
                           styleClass="filtro-textfield"/>

                <!-- CategorÃ­a -->
                <ComboBox fx:id="cbCategoria"
                          promptText="ðŸ“‚ CategorÃ­a"
                          prefWidth="200"
                          styleClass="filtro-combobox"/>

                <!-- Ordenar -->
                <ComboBox fx:id="cbOrdenar"
                          prefWidth="180"
                          styleClass="filtro-combobox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Stock ascendente"/>
                            <String fx:value="Stock descendente"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Mostrar agotados -->
                <CheckBox fx:id="chkAgotados"
                          text="ðŸ”´ Mostrar agotados"
                          styleClass="filtro-check"/>
            </HBox>


            <!-- ðŸ”¹ Contenedor de tarjetas -->
            <ScrollPane fitToWidth="true"
                        style="-fx-background-color: transparent;"
                        VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="contenedorTarjetas"
                              hgap="20" vgap="20"
                              prefWidth="800"
                              styleClass="card-flow">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>

        </VBox>
    </center>



</BorderPane>
