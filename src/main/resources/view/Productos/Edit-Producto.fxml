<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.Productos.EditProductosController"
            prefWidth="500" prefHeight="650"
            stylesheets="/styles.css">

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="20" alignment="TOP_CENTER" styleClass="form-container">

                <!-- Título principal -->
                <VBox spacing="5" alignment="CENTER" styleClass="title-section">
                    <Label text="Editar Producto" styleClass="form-title"/>
                    <Label text="Modifique la información del producto" styleClass="form-subtitle"/>
                </VBox>

                <!-- Contenedor de campos del formulario -->
                <VBox spacing="20" styleClass="form-fields-container">

                    <!-- Sección: Información básica -->
                    <VBox spacing="15" styleClass="form-section">
                        <Label text="INFORMACIÓN BÁSICA" styleClass="section-label"/>

                        <TextField fx:id="txtCodigoBarras" promptText="Código de barras" styleClass="modern-textfield"/>
                        <TextField fx:id="txtNombre" promptText="Nombre del producto" styleClass="modern-textfield"/>
                        <TextArea fx:id="txtDescripcion" promptText="Descripción del producto"
                                  prefRowCount="3" wrapText="true" styleClass="modern-textarea"/>
                    </VBox>

                    <!-- Sección: Precios y Stock -->
                    <VBox spacing="15" styleClass="form-section">
                        <Label text="PRECIOS Y STOCK" styleClass="section-label"/>

                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Precio de Compra" styleClass="field-label"/>
                                <TextField fx:id="txtPrecioCompra" promptText="0.00" styleClass="modern-textfield"/>
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Precio de Venta" styleClass="field-label"/>
                                <TextField fx:id="txtPrecioVenta" promptText="0.00" styleClass="modern-textfield"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Stock Actual" styleClass="field-label"/>
                            <TextField fx:id="txtStock" promptText="0" styleClass="modern-textfield"/>
                        </VBox>
                    </VBox>

                    <!-- Sección: Imagen -->
                    <VBox spacing="15" styleClass="form-section">
                        <Label text="IMAGEN DEL PRODUCTO" styleClass="section-label"/>

                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <TextField fx:id="txtImagen" promptText="Ruta de la imagen"
                                       editable="false" styleClass="image-path-field" HBox.hgrow="ALWAYS"/>
                            <Button text="Seleccionar" fx:id="btnSeleccionarImagen" styleClass="secondary-button"/>
                        </HBox>

                        <VBox spacing="8" alignment="CENTER">
                            <ImageView fx:id="imgPreview" fitWidth="120" fitHeight="120" preserveRatio="true"
                                       smooth="true" styleClass="image-preview"/>
                            <Button text="Eliminar imagen" fx:id="btnEliminarImagen" styleClass="danger-button"/>
                        </VBox>
                    </VBox>

                    <!-- Sección: Categoría y Proveedor -->
                    <VBox spacing="15" styleClass="form-section">
                        <Label text="CATEGORIZACIÓN" styleClass="section-label"/>

                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Categoría" styleClass="field-label"/>
                                <ComboBox fx:id="cbCategoria" promptText="Seleccione categoría" styleClass="modern-combobox"/>
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Proveedor" styleClass="field-label"/>
                                <ComboBox fx:id="cbProveedor" promptText="Seleccione proveedor" styleClass="modern-combobox"/>
                            </VBox>
                        </HBox>
                    </VBox>

                </VBox>

                <!-- Botones de acción -->
                <HBox spacing="15" alignment="CENTER" styleClass="buttons-container">
                    <Button fx:id="btnCancelar" text="Cancelar" styleClass="cancel-button"/>
                    <Button fx:id="btnGuardar" text="Actualizar Producto" styleClass="primary-button"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>